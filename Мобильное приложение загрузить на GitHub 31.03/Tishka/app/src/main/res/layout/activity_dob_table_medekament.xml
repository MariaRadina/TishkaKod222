<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myfon"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RycovodstvoPoBezopasnosti.SoisokRycovodstvPoBezopasnosti">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myfon"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SpisokInfoPO">

    <ImageView
        android:id="@+id/strelka"
        android:layout_width="66dp"
        android:layout_height="112dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/strelka" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/preparat" />


    <TextView
        android:id="@+id/app_sloan"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="1dp"
        android:text="Поступление товара"
        android:textAlignment="center"
        android:textColor="#00137D"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editTextInstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_sloan"
        android:layout_marginTop="10dp"
        android:hint="Название препарата" />

    <EditText
        android:id="@+id/editTextInstr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInstr"
        android:layout_marginTop="1dp"
        android:hint="Колиичество" />

    <EditText
        android:id="@+id/editTextInstr3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInstr2"
        android:layout_marginTop="1dp"
        android:hint="Цена закупки" />

    <EditText
        android:id="@+id/editTextInstr4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInstr3"
        android:layout_marginTop="1dp"
        android:hint="Цена продажи" />

    <EditText
        android:id="@+id/editTextInstr5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInstr4"
        android:layout_marginTop="1dp"
        android:hint="Поставщик" />

    <EditText
        android:id="@+id/editTextInstr6"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_below="@+id/editTextInstr5"
        android:layout_marginTop="1dp"
        android:hint="Срок годности" />

    <Button
        android:id="@+id/login_btn4"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextInstr6"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Добавить"

        android:textColor="#FDFDFD"
        android:textSize="17dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rect"
        android:layout_below="@+id/login_btn4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

